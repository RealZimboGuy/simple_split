# justfile

VERSION := "1.5.2+12"

aab:
  just update-version
  cp .env.prod .env
  flutter clean
  flutter build appbundle --release

update-version:
  # This replaces the version in pubspec.yaml with the VERSION variable
  sed -i '' 's/^version: .*/version: {{VERSION}}/' pubspec.yaml
  sed -i '' "s/'Version: [^']*'/'Version: {{VERSION}}'/" lib/screens/home_screen.dart

